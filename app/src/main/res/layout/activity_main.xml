<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="com.example.victor.interfaces4.MainActivity">


    <Button
        android:id="@+id/bt1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Fondo rojo" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Letras rojas" />

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbHide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/twHide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Este es el mensaje oculto"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/twClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Esto es el click largo"
        android:textSize="24sp" />

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:id="@+id/viewColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#ff0000"
            android:visibility="invisible"></View>

        <RatingBar
            android:id="@+id/rbPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/twPoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[0/5]"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_below="@+id/rbPoints"
            android:layout_alignParentStart="true"
            android:layout_marginTop="22dp" />

    </RelativeLayout>


</LinearLayout>
